<div id='side' class='span4 pull-right'>
  <h3>Top Tutorials</h3>
  <ul>
    <% Tutorial.limit(5).each do |tutorial|%>
      <li>
      <%= link_to tutorial.title, tutorial%><br />
      <p><%= tutorial.ruby_gems_names.join(", ")%></p>
      </li>
    <%end%>
  </ul>

  <h3>Top Ruby Gems</h3>
  <ul>
    <% RubyGem.limit(5).offset(100).each do |gem|%>
      <li> <%= link_to gem.name, gem%></li>
    <%end%>
  </ul>

  <h3>Top Users</h3>
  <ul>
    <% User.limit(5).each do |user|%>
      <li> <%= link_to user.name, user%> </li>
    <%end%>
  </ul>
</div>

<div class='span12 pull-left'>
  <div class='hero-unit' id='billboard'>
    <h1> Welcome to Nerdgem!</h1>
    <h3 class='blue'>Social Ruby knowledge and more...</h3>
  </div>
  <%= render :partial => 'tutorials', :locals =>{ :tutorials => @tutorials} %>
</div>

