<% javascript 'preview' %>
<div id='preview'>
  <h2 class='live'>Live preview</h2>
  <div class='preview' id='tutorial_preview'><%= markdown (@tutorial.body.to_s) %></div>
</div>
<%= form_for @tutorial, :html => {:class=> "form"} do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :ruby_gem_tokens, "Gems in this tutorial" %><br />
  <%= f.text_field :ruby_gem_tokens, "data-pre" => @tutorial.ruby_gems.map(&:attributes).to_json %>
  </p>
  <p>
  <%= render 'markdown'%>
  <%= f.label :body %>
  <%= f.text_area :body%>
  </p>
  <p><%= f.submit :class => "button right" %></p>
<% end %>
<div class='clear'></div>

